<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.house.model.dao.QnaDao">

	<sql id='searchcon'>
		<if  test="word != null and word !='' ">
			<choose>
				<when test=" key =='no'">
					no = #{word}
				</when>
				<when test=" key =='title'">
					title like  concat('%',#{word},'%') 
				</when>
				<when test=" key =='id'">
					id like  concat('%',#{word},'%') 
				</when>
			</choose>
		</if>
	</sql>
	
	<select id="searchAll" parameterType="Map" resultType="Qna">
		select * from qna
		<where>
			<include refid="searchcon"/>	
		</where>
	</select>
	
	<select id="searchByNo" parameterType="string"	resultType="Qna">
		select * from qna where no = #{no}
	</select>
	
	<insert id='insert' parameterType="Qna">
		insert into qna(id, title, question, answer)
		values (#{id}, #{title}, #{question}, #{answer})
	</insert>
	
	<update id='update' parameterType="Qna">
		update qna set id = #{id} ,title = #{title} ,question = #{question} ,answer = #{answer}, completed = #{completed}
		where no = #{no}
	</update>
	
	<delete id="delete" parameterType="string">
		delete from qna where no = #{no} 
	</delete>
	
	<select id="pagination" parameterType="Map" resultType="Qna">
		select * from qna
		<where>
			<include refid="searchcon"/>	
		</where>
		limit #{start},#{len}
	</select>
	
</mapper>